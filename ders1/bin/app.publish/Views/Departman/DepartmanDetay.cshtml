@using ders1.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb" mb-4>
    <li class="breadcrumb-item active">@ViewBag.d Departmanı</li>
</ol>

<br />
<table class="table table-hover">

    <tr>
        <th>AD</th>
        <th>SOYAD</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelAd</td>
            <td>@x.PersonelSoyad</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@x.Personelid" class="btn btn-default" style="background-color:cadetblue">Satışlar</a></td>
        </tr>
    }
</table>