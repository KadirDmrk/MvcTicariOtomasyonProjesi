@model ders1.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>KategoriEkle</h2>
<br />
<script src="~/Scripts/jquery-3.4.1.js"></script>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.KategoriAd)
    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" id="Btn1">Kaydet </button>

    <script>
        $('#Btn1').click(function () {
            alert("Kategori Başrılı Bir Şekilde Eklendi")
        });
    </script>
</form>