@using ders1.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <td>Saat</td>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td> @k.FaturaSerino - @k.FaturSırano </td>
            <td> @k.Tarih </td>
            <td> @k.Saat </td>
            <td> @k.Toplam ₺</td>
            <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-warning">Güncelle </a></td>
            <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-success" style="background-color:lightcoral;color:white)"> Detaylar </a></td>   
            <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-success" style="background-color:thistle;color:white)"> Kalem </a></td>

        </tr>
    }

</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info"> Yeni Fatura Girişi</a>
<br /> <br />
<button type="button" class=" btn btn-warning" style="background-color:#c53030;color:white" data-toggle="modal" data-target="#Modal1"> Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <h3 class="modal-title"> Popup Diyalog Ekranı</h3>
        </div>
        <div class="modal-body">
            <table class="table table-bordered" style="background-color:white">
                <tr>
                    <td>Seri No</td>
                    <td>Sıra No</td>
                    <td>Tutar</td>
                </tr>
                @foreach (var x in Model)
                {
                <tr>
                    <td>@x.FaturaSerino</td>
                    <td>@x.FaturSırano</td>
                    <td>@x.Toplam</td>
                </tr>
                }
            </table>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
        </div>
    </div>
</div>